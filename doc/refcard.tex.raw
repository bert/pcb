\newcommand{\Shift}{{\it [S]}}
\newcommand{\Ctrl}{{\it [C]}}
\newcommand{\Mod}{{\it [M]}}
\newcommand{\Btn}{{\it Btn}}
\newcommand{\Fun}{{\it F}}

